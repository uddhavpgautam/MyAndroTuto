<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityIntentTest" >


    <EditText 
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your url here"
        />
    <Button 
        android:id="@+id/btnGoToNextActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUrl"
        android:text="Goto Next Activity"
        android:onClick="clickHandler"
        />
    <Button
        android:id="@+id/btnGoToBrowser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGoToNextActivity"
        android:text="Goto Browser"
        android:onClick="clickHandler"
        />
    <Button 
        android:id="@+id/btnCallNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGoToBrowser"
        android:text="Call"
        android:onClick="clickHandler"
        />
    <Button 
        android:id="@+id/btnSendCustomIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCallNow"
        android:text="Broadcast Custom Intent"
        android:onClick="clickHandler"
        />
    <Button
        android:id="@+id/btnStartReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Start Receving"
        android:textSize="12sp"
        android:onClick="clickHandler"
        />
      <Button
        android:id="@+id/btnStopReceving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
        android:text="Stop Receving"
        android:textSize="12sp"
        android:onClick="clickHandler"
        />

</RelativeLayout>
